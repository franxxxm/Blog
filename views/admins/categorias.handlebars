<h2>Lista de categorias</h2>
<hr>
<a href="categorias/add"><button class="btn btn-dark">Adicionar nova categoria</button> </a>
{{#each dados}}
    <div class="card mt-1">
        <div class="card card-body">
            <h4>nome:{{nome}}</h4>
            <small>slug:{{slug}}</small>
            <small>data:{{createdAt}}</small>
            <a href="/admin/categorias/edite/{{id}}"><button class="btn btn-info mt-4">Editar</button></a>
            <form action="categorias/delete" method="POST">
                <input type="hidden" name="id" value="{{id}}">
                <input type="submit" class="btn btn-danger mt-1" value="Excluir">
            </form>
        </div>
    </div>

{{else}}

    <div class="mt-2"><h4>Nenhum categoria foi encontrada</h4></div>
{{/each}}